import pandas as pd

import os

from sklearn.feature_extraction.text import TfidfVectorizer

from sklearn.metrics.pairwise import cosine_similarity



TASKS_FILE = 'tasks.csv'



def load_tasks():

    if not os.path.exists(TASKS_FILE):

        df = pd.DataFrame(columns=['Task', 'Priority'])

        df.to_csv(TASKS_FILE, index=False)

    return pd.read_csv(TASKS_FILE)



def save_tasks(df):

    df.to_csv(TASKS_FILE, index=False)



def add_task():

    task = input("Enter task description: ")

    priority = input("Enter task priority (High/Medium/Low): ")

    df = load_tasks()

    df = pd.concat([df, pd.DataFrame([[task, priority]], columns=['Task', 'Priority'])], ignore_index=True)

    save_tasks(df)

    print("âœ… Task added.")



def remove_task():

    df = load_tasks()

    if df.empty:

        print("No tasks to remove.")

        return

    print(df[['Task']].to_string(index=True))

    try:

        idx = int(input("Enter the index of the task to remove: "))

        if 0 <= idx < len(df):

            df = df.drop(index=idx).reset_index(drop=True)

            save_tasks(df)

            print("ðŸ—‘ï¸ Task removed.")

        else:

            print("Invalid index.")

    except ValueError:

        print("Please enter a valid number.")



def list_tasks():

    df = load_tasks()

    if df.empty:

        print("ðŸ“­ No tasks found.")

    else:

        print("\nðŸ“‹ Your Tasks:")

        print(df.to_string(index=True))



def prioritize_tasks():

    df = load_tasks()

    if df.empty:

        print("ðŸ“­ No tasks to prioritize.")

    else:

        priority_order = {'High': 1, 'Medium': 2, 'Low': 3}

        df['PriorityRank'] = df['Priority'].map(priority_order)

        df = df.sort_values(by='PriorityRank')

        print("\nðŸ”¥ Prioritized Tasks:")

        print(df.drop(columns='PriorityRank').reset_index(drop=True))





def main():

    while True:

        print("\nðŸ› ï¸ Task Management App")

        print("1. Add Task")

        print("2. Remove Task")

        print("3. List Tasks")

        print("4. Prioritize Tasks")

        print("5. Exit")



        choice = input("Choose an option (1-5): ")



        if choice == '1':

            add_task()

        elif choice == '2':

            remove_task()

        elif choice == '3':

            list_tasks()

        elif choice == '4':

            recommend_task()

        elif choice == '5':

            print("ðŸ‘‹ Exiting Task Management App. Goodbye!")

            break

        else:

            print("âŒ Invalid choice. Please select from 1 to 5.")



if __name__ == '__main__':

    main()
